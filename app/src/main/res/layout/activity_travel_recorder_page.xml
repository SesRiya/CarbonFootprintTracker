<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/cf_green"
    tools:context=".TravelRecorderPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:justificationMode="inter_word"
            android:text="@string/textview"
            android:textAllCaps="false"
            android:textColor="#004D40"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_marginLeft="300dp"
            android:contentDescription="@string/avatar"
            android:fontFamily="@font/montserrat"
            android:onClick="GobackMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.063"
            app:srcCompat="@drawable/girl" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:justificationMode="inter_word"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="@string/points_recorder"
            android:textAlignment="center"
            android:textColor="#0D47A1"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.257" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/carButton"
                android:layout_width="60dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:onClick="carButton"
                app:srcCompat="@drawable/car_1" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/bikeButton"
                android:onClick="bikeButton"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/bike_1" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/planeButton"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="planeButton"
                app:srcCompat="@drawable/plane_1"
                tools:ignore="SpeakableTextPresentCheck" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/trainButton"
                android:onClick="trainButton"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/train_1" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/walkButton"
                android:onClick="walkButton"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/walk_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/car"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/bikeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bicycle"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/planeText"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/airplane"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/trainText"
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/train"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/walkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="@string/walk"
                android:textAlignment="center" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:background="@color/cf_green">

        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>